@using DrTaabodi.Data.DatabaseContext
@inject DrTaabodiDbContext _context

@{
    var slides = _context.WebsiteOptionsTbls.Where(o => o.OptionKey.StartsWith("homepage_slideshow_"));
    if (slides.Any())
    {
        <div id="carouselExampleControls" class="carousel slide h-100" data-bs-ride="carousel">
            <div class="carousel-inner h-100">

                @{ var i = 0; }
                @foreach (var x in slides)
                {
                    <div class="carousel-item @(i == 0 ? "active" : "") h-100">
                        <img src="@x.OptionValue" class="d-block h-100 w-100 img-cover">
                    </div>
                    i++;
                }

            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    }
}