    <script>
        const navbar = document.getElementById('main-navigation');
        window.addEventListener('scroll', function () {
            if (window.scrollY >= window.innerHeight && !navbar.classList.contains('scrolled'))
                navbar.classList.add('scrolled');
            if (window.scrollY < window.innerHeight && navbar.classList.contains('scrolled'))
                navbar.classList.remove('scrolled');


            $('[data-on-scroll-change]').each(function (indx, elm) {
                if (window.scrollY >= elm.offsetTop && (elm.offsetTop + elm.offsetHeight) > window.scrollY)
                    $(`.nav-link[href="#${elm.id}"]:not(.active)`).addClass('active');
                else if (elm.offsetTop < window.scrollY || (elm.offsetTop + elm.offsetHeight) >= window.scrollY)
                    $(`.nav-link[href="#${elm.id}"].active`).removeClass('active');
            })
        })


    </script>

